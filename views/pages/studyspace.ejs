<% include ../partials/header %>
  <link type='text/css' rel='stylesheet' href='/stylesheets/studyspace.css'>
</head>
<body>
  <main>
    <% include ../partials/navigation %>
    <section
      class='container'
    >
      <section
        class='other-studyspaces-container'
      >
        <h1>
          Studyspaces
        </h1>
        <ul>
        <% studyspaces.map((studyspaceItem) => { %>
          <li>
          <% if (studyspaceItem._id.equals(studyspace._id)) { %>
              <a
                class='current'
                href='/studyspaces/<%= studyspaceItem._id %>'
              >
                <%= studyspaceItem.name %>
              </a>
          <% } else { %>
              <a
                href='/studyspaces/<%= studyspaceItem._id %>'
              >
                <%= studyspaceItem.name %>
              </a>
          <% } %>
          </li>
        <% }); %>
        </ul>
      </section>
      <section
        class='studyspace-container'
      >
        <h1>
          <%= studyspace.name %>
        </h1>
        <section
          class='content-container'
        >
          <img 
            alt='<%= studyspace.name %>'
            src='<%= studyspace.image %>' 
          />
          <section
            class='info-container'
          >
            <section
              class='left-container'
            >
              <p>
                <%= studyspace.type %>
              </p>
              <p>
                Address: <%= studyspace.address %>
              </p>
              <p>
                Postal Code: <%= studyspace.postalCode %>
              </p>
              <p>
                City: <%= studyspace.city %>
              </p>
              <p>
                Province: <%= studyspace.province %>
              </p>
              <p>
                Website:
                <% if (studyspace.website === 'N/A') { %>
                  <span>
                    <%= studyspace.website %>
                  </span>
                <% } else { %>
                  <a href='/' target='_blank'>
                    <%= studyspace.website %>
                  </a>
                <% } %>
              </p>
              <p>
                Phone: <%= studyspace.phone %>
              </p>
            </section>
            <section
              class='right-container'
            >
              <p>
                Rating: <%= studyspace.rating %> / 5
              </p>
              <p>
                <a
                  href='/'
                  target='_blank'
                >
                  Find on Google Maps
                </a>
              </p>
            </section>
          </section>
        </section>
        <section
          class='comments-section'
        >
          <section
            class='new-comment-container'
          >
            <button
              class='button-normal'
              id='button'
            >
              Add New Comment
            </button>
            <section
              class='form-container'
            >
              <form
                action='/studyspaces/<%= studyspace._id %>/comments'
                method='POST'
              >
                <input 
                  class='input-normal'
                  type='text'
                  placeholder='Enter a new comment here...'
                  name='comment'
                />
                <section
                  class='submit-container'
                >
                  <input 
                    class='button-normal'
                    id='submit'
                    type='submit'
                    value='Submit'
                  />
                </section>
              </form>
            </section>
          </section>
          <section
            class='comments-container'
          >
          <% comments.map((comment) => { %>
            <section
              class='single-comment-container'
            >
              <p>
                <%= comment.text %>
              </p>
              <section
                class='comment-buttons-container'
              >
                <a
                  class='button-normal edit-button'
                  href='/studyspaces/<%= studyspace._id %>/comments/<%= comment._id %>/edit'                
                >
                  Edit
                </a>
                <form
                  class='delete-form'
                  action='/studyspaces/<%= studyspace._id %>/comments/<%= comment._id %>'
                  method='DELETE'
                >
                  <input 
                    class='button-normal'
                    type='submit'
                    value='Delete'
                  />
                </form>
              </section>
            </section>
          <% }); %>
          </section>
        </section>
      </section>
    </section>
  </main>
  <script
    async
    defer
    src='/scripts/studyspace.js'
  >
  </script>
</body>
</html>