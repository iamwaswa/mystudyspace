<% include ../partials/header %>
  <link type='text/css' rel='stylesheet' href='/stylesheets/editcomment.css'>
</head>
<body>
  <main>
    <% include ../partials/navigation %>
    <section 
      class='container'
    >
      <h2>
        Edit Comment
      </h2>
      <form
        action='/studyspaces/<%= studyspaceId %>/comments/<%= commentId %>?_method=PUT'
        method='POST'
      >
        <input 
          class='input-normal'
          name='comment'
          type='text'
          placeholder='Edit comment here...'
          value='<%= comment %>'
        />
        <input 
          class='button-normal'
          type='submit'
          value='Update'
        />
      </form>
    </section> 
  </main>
</body>