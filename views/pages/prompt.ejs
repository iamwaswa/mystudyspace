<% include ../partials/header %>
  <link type='text/css' rel='stylesheet' href='/stylesheets/pages/prompt.css'>
</head>
<body>
  <main>
    <% include ../partials/navigation %>
    <section
      class='container'
    >
      <section
      class='use-current-location'
      >
        <p>
          User your current location
        </p>
        <p>
          (Requires using device location)
        </p>
        <a
          class='button-normal'
          href='/studyspaces/new'
          >
          Use
        </a>
      </section>
      <p>
        OR
      </p>
      <section
        class='use-entered-location'
      >
        <p>
          Enter your desired location below:
        </p>
        <form
          action='/prompt'
          method='POST'
        >
          <input 
            class='input-normal'
            type='text' 
            placeholder='Enter your street address here...' 
            name='physical' 
            autocomplete='shipping street-address'
            required
          />
          <input 
            class='input-normal'
            type='text' 
            placeholder='Enter your postal code here...' 
            name='postal'
            autocomplete='shipping postal-code' 
          />
          <input 
            class='input-normal'
            type='text' 
            placeholder='Enter your city here...' 
            name='city' 
            autocomplete='shipping locality'
          />
          <input 
            class='input-normal'
            type='text' 
            placeholder='Enter your province here...' 
            name='province' 
            autocomplete='shipping region'
          />
          <input 
            class='button-normal'
            type='submit' 
            value='Submit' 
          />
        </form>
      </section>
    </section>
  </main>
</body>
</html>